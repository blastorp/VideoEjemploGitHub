@model Producto
<form method="post">

    <h3 class="text-danger">Nuevo Producto</h3>
    <h5 class="text-danger">Favor Registrar los Datos del Producto</h5>

<div class="form-floating mb-3">
    <input type="text"
           class="form-control"
           id="inputIdCategoria"
           asp-for="IdCategoria"
           required
           placeholder="IdCategoria" />
    <label for="inputNombreProducto">Id Categoria</label>
</div>
<div class="form-floating mb-3">
    <input type="text"
           class="form-control"
           id="inputNombreProducto"
           asp-for="Nombre"
           required
           placeholder="Nombre Producto" />
    <label for="inputNombreProducto">Nombre Producto</label>
</div>
<div class="form-group">
    <label for="inputDescripcion">UrlImagen</label>
<textarea asp-for="UrlImagen"
          required
          class="form-control"
          name="UrlImagen"
          id="UrlImagen"
          rows="5"
          placeholder="UrlImagen"></textarea>
</div>
<div class="form-group">
    <label for="inputDescripcion">Descripcion</label>
<textarea asp-for="Descripcion"
          required
          class="form-control"
          name="Descripcion"
          id="Descripcion"
          rows="5"
          placeholder="Descripcion"></textarea>
</div>


<div class="form-floating mb-3">
    <input type="range"
           min="10"
           max="1000"
           step="10"
           class="form-control mt-3 form-range"
           id="inputPrecio"
           asp-for="Precio"
           required
           placeholder="Precio"
           required| />

    <label for="inputPrecio">
        Precio:
        <span class="text-danger" id="displayPrecio">550</span>
    </label>
</div>







